<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".videoview">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight=".8"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/vupload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Your Jallikattu Video"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textAlignment="center"
                android:text="நீங்கள் தினமும் ஒரு வீடியோவை மட்டும் பதிவு செய்யலாம் (Daily one video upload for one user) "/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <android.support.v4.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:id="@+id/swipe_container"

                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#6100"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    app:contentPadding="3dp"
                    app:cardUseCompatPadding="true"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:background="@color/gray"
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbarSize="5dp"

                        android:scrollbarThumbVertical="@android:color/darker_gray"
                        android:scrollbars="vertical">




                    </android.support.v7.widget.RecyclerView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:visibility="invisible"
                        android:id="@+id/nodate"
                        android:layout_marginTop="190dp"
                        android:text="NO videos Found"/>

                </android.support.v7.widget.CardView>
            </android.support.v4.widget.SwipeRefreshLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>